<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Handle API routes
    RewriteRule ^api/mood$ api/mood.php [L]
    RewriteRule ^api/moods$ api/moods.php [L]
    
    # Redirect root to API
    RewriteRule ^$ index.php [L]
</IfModule>

# Enable directory indexing for debugging
Options +Indexes